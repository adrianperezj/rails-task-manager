<div class="container">
  <h1>New Task</h1>
</div>

<div class="container">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
  <% end %>
</div>

<div class="container">
  <%= link_to "Back to list", tasks_path %>
</div>
